<% if AeUsers.js_framework == "jquery" -%>
function chooseHavePassword() {
    val = $('.auth_form input[name="login[have_password]"]:checked').val();
	$password = $('.auth_form input[name="login[password]"]');
	$password.val("");
	
	if (val == "true") {
	    $password.attr('disabled', '');
		$password.focus();
	} else {
	    $password.attr('disabled', 'disabled');
	}
}

$(document).ready(function () {
    <% if (params[:login] and params[:login][:password]) -%>
      $('.auth_form input[name="login[have_password]"][value="false"]').attr('checked', 'checked');
    <% end -%>
	chooseHavePassword();
	$('.auth_form input[name="login[have_password]"]').bind('change', chooseHavePassword);
});
<% else -%>
function chooseHavePassword() {
	val = $('login_have_password_true').checked;
	password = $('login_password');
	password.value = "";
	
	if (val) {
		password.disabled = false;
		password.focus();
	} else {
		password.disabled = true;
	}
}

Event.observe(window, 'load', function () {
    <% if (params[:login] and params[:login][:password]) -%>
      $('login_have_password_true').checked = true;
    <% end -%>
    chooseHavePassword();
	$('login_have_password_true').observe('change', chooseHavePassword);
	$('login_have_password_false').observe('change', chooseHavePassword);
});
<% end -%>