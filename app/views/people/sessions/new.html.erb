<div id="login_email_password" class="login">
    <h2>Log in with a password</h2>
    
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name) ) do |f| -%>
    
    <p>
      <%= f.label :email, "Email address", :class => "block" %>
      <%= f.text_field :email, :tabindex => 1 %>
    </p>
    
    <p>
      <%= f.label "password" %>
      <%= f.password_field "password", :tabindex => 2 %>
    </p>
    
    <% if devise_mapping.rememberable? -%>
      <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
    <% end -%>
    
    <p>
      <%= f.submit "Log in" %>
    </p>

  <% end -%>
</div>

<div id="login_openid" class="login">
  <h2>Log in with OpenID</h2>  
  
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name) ) do |f| -%>
    
    <p>
      <%= f.label :identity_url, "OpenID URL", :class => "block" %>
      <%= f.text_field :identity_url %>
    </p>

    <p>
      <%= submit_tag "Log in with OpenID" %>
    </p>

  <% end -%>
</div>

<%= render :partial => "devise/shared/links" %>
