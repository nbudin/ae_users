<li id="person_<%=person.id%>"><%= image_tag "user.png", :plugin => "ae_users" %>
  <%=h person.name %>
  <%= link_to_remote "Remove",
            { :url => { :controller => "permission", :action => "remove_role_member", :id => person.id, :role => @role.id }.update(authenticity_options),
            :success => "$('person_#{person.id}').remove();",
            :confirm => "Are you sure you want to remove that member from this role?" },
            { :class => "permission_action" } %>
</li>